[user]
    name = Geoffrey Chandler
    email = geoffc@gmail.com

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[core]
    autocrlf = input

[alias]
    bb = !better-branch.sh

[rerere]
    enabled = true

[column]
    ui = auto

[branch]
    sort = -committerdate
[url "git@gh-geoff:sailorgeoffrey/"]
    insteadOf = git@github.com:sailorgeoffrey/

[url "git@gh-geoff:advantageous/"]
    insteadOf = git@github.com:advantageous/

[url "git@gh-ev:evinova/"]
    insteadOf = git@github.com:evinova/

[url "git@gh-ev:unified-trials/"]
    insteadOf = git@github.com:unified-trials/

[url "git@gh-az:RDIT-DPS/"]
    insteadOf = git@github.com:RDIT-DPS/

